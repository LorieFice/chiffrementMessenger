{
  "manifest_version": 2,
  "name": "chiffreur2mots",
  "version": "0.2",
  "content_scripts" : [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": ["content.js"],
      "run_at":"document_idle"
    }
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "permissions": ["tabs"],
  "browser_action": {
    "default_icon": "cadenas.png",
    "default_popup": "index.html",
    "default_title": "Thibault > all"
  }
}
